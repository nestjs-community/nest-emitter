{
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": ".*\\.(test|spec).(ts|tsx|js)$",
  "rootDir": "src",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/app/constants.ts",
    "!src/**/index.ts",
    "!src/**/*.module.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.enum.ts",
    "!**/node_modules/**",
    "!**/vendor/**"
  ],
  "coverageReporters": ["json", "lcov"]
}
